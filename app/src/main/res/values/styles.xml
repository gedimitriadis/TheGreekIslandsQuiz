<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewLogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textColorwhite</item>
        <item name="android:textSize">@dimen/textSize36</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blueBG</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_margin">@dimen/margin24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height200</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDarkBlue</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:layout_width">@dimen/width0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDarkBlue</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextViewStyleHeader">
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorDarkBlue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStyleQuestion">
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorwhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blueBG</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="IslandTagStyle">
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:layout_margin">@dimen/width0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorwhite</item>
        <item name="android:background">@color/blueBG</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/textColorwhite</item>
        <item name="android:background">@color/blueBG</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin16dp</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="StartButtonStyle">
        <item name="android:textColor">@color/textColorwhite</item>
        <item name="android:background">@color/blueBG</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/AppLogo</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/blueBG</item>
    </style>

</resources>
